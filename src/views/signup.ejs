<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SignUp</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap");

      body {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        font-family: "Inter", sans-serif;
        background-color: #f7f9fa;
        margin: 0;
        padding: 0;
      }

      .container {
        padding: 0;
        display: flex;
        text-align: center;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        width: 100%;
        max-width: 420px;
        margin-bottom: 10px;
      }

      fieldset {
        border: none;
        border-radius: 16px;
        padding: 10px 30px 7px 30px;
        background-color: #fff;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
        background: linear-gradient(135deg, #ffffff 0%, #f9fbfc 100%);
        width: 380px;
        min-height: 500px;
        box-sizing: border-box;
      }

      legend {
        font-size: 28px;
        font-weight: 800;
        color: #000;
        padding: 0;
        letter-spacing: -0.5px;
      }

      label {
        font-weight: 600;
        font-size: 13px;
        color: #536471;
        display: block;
        text-align: left;
        margin-bottom: 6px;
      }

      input {
        width: 100%;
        padding: 10px;
        border: 1px solid #dfe6e9;
        border-radius: 10px;
        font-size: 15px;
        font-family: "Inter", sans-serif;
        box-sizing: border-box;
        background-color: #fafafa;
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
      }

      input:focus {
        border-color: #00acee;
        box-shadow: 0 0 5px rgba(0, 172, 238, 0.3);
        outline: none;
      }

      input::placeholder {
        color: #8899a6;
        font-family: "Inter", sans-serif;
      }

      button {
        width: 100%;
        padding: 14px;
        font-size: 16px;
        font-weight: 700;
        font-family: "Inter", sans-serif;
        background-color: #00acee;
        color: #fff;
        border: none;
        border-radius: 30px;
        cursor: pointer;
        transition: background-color 0.2s ease, transform 0.1s ease;
      }

      button:hover {
        background-color: #0098d4;
        transform: translateY(-1px);
      }

      #circle {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        border: 1px dashed #ccd6dd;
        overflow: hidden;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #fff;
      }

      #uPreview {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .file-upload-wrapper {
        position: relative;
        width: 100%;
        margin-bottom: 10px;
      }

      #file {
        display: none;
      }

      .file-upload-label {
        display: inline-block;
        width: 90%;
        padding: 10px;
        font-size: 14px;
        font-weight: 600;
        font-family: "Inter", sans-serif;
        background-color: #e6f3fa;
        color: #00acee;
        border: 2px dashed #00acee;
        border-radius: 10px;
        text-align: center;
        cursor: pointer;
        transition: all 0.2s ease;
      }

      .file-upload-label:hover {
        background-color: #d1e9f6;
        border-color: #0098d4;
        color: #0098d4;
      }

      .links {
        margin-top: 20px;
        font-size: 13px;
      }

      .links a {
        color: #00acee;
        text-decoration: none;
        margin-left: 10px;
      }

      .links a:hover {
        text-decoration: underline;
        color: #0098d4;
      }

      .red {
        color: #ff4d4f;
        font-size: 13px;
      }

      .green {
        color: #00b894;
        font-size: 13px;
      }

      form h3 {
        font-size: 20px;
        font-weight: 700;
        color: #14171a;
        margin-top: 0px;
        margin-bottom: 5px;
      }
      .name-row {
        display: flex;
        justify-content: space-between;
        gap: 10px;
        /* margin-bottom: 20px; */
      }

      .name-row label {
        margin-bottom: 6px;
      }

      .name-row input {
        width: 100%;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <fieldset>
        <legend>SignUp</legend>
        <form id="form" action="#">
          <h3>Create New Account</h3>
          <div id="circle">
            <img
              id="uPreview"
              style="width: 100%; border-radius: 50%; object-position: contain"
            />
          </div>
          <label for="username">UserName: </label>
          <input
            type="text"
            placeholder="Enter A Unique UserName"
            id="username"
            name="username"
          /><br /><br />
          <div class="name-row">
            <div>
              <label for="fname">First Name: </label>
              <input
                type="text"
                placeholder="First Name"
                id="fname"
                name="fname"
              />
            </div>
            <div>
              <label for="lname">Last Name: </label>
              <input
                type="text"
                placeholder="Last Name"
                id="lname"
                name="lname"
              />
            </div>
          </div> <br>
          <label for="email">Email: </label>
          <input
            type="email"
            placeholder="Enter A valid Email"
            id="email"
            name="email"
          /><br /><br />
          <label for="bio">Bio: </label>
          <input
            type="text"
            placeholder="Enter A Bio"
            id="bio"
            name="bio"
          /><br /><br />
          <div class="file-upload-wrapper">
            <label for="file">Upload Picture: </label>
            <input
              type="file"
              id="file"
              name="file"
              onchange="previewImage()" accept="image/png, image/jpeg, image/jpg"
            />
            <label for="file" class="file-upload-label">Select File</label>
          </div>
          <button>SignUp</button>
          <p id="msg"></p>
        </form>
        <div class="links">
          <a href="/api/v1/user/login">Already have An Account..</a>
        </div>
      </fieldset>
    </div>

    <script>
      let token = localStorage.getItem("token");
      if (token) {
        location.href = "/api/v1/dashboard/";
      }
      let form = document.querySelector("#form");
      form.addEventListener("submit", async (e) => {
        e.preventDefault();

        const formData = new FormData(e.target);
        let responce = await fetch("/api/v1/user/register", {
          method: "post",
          body: formData,
        });

        let data = await responce.json();
        localStorage.setItem("token", data.token);
        if (responce.status == 201) {
          setTimeout(() => {
            window.location.href = "VarifyUser";
          }, 2000);
        }
        let msg = document.getElementById("msg");
        if (data.success == true) {
          msg.setAttribute("class", "green");
        } else {
          msg.setAttribute("class", "red");
        }
        msg.innerHTML = data.message;
      });

      function previewImage() {
        let filereader = new FileReader();
        filereader.readAsDataURL(document.querySelector("#file").files[0]);
        filereader.onload = function (fileevent) {
          document.getElementById("uPreview").src = fileevent.target.result;
        };
      }
    </script>
  </body>
</html>